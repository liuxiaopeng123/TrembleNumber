<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/white_bg"
        >





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="20dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/dialog_cancle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PK邀请"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorAccent"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="380dp">
            <com.theworldofluster.example.ziang.tremblenumber.view.CircularImage
                android:layout_gravity="center"
                android:id="@+id/dialog_pk_invited_userimg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/expert_b"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/dialog_pk_invited_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:gravity="center"
                android:singleLine="false"
                android:text="用户哈哈向你发来挑战邀请"
                android:textSize="16sp"
                android:padding="5dp"
                android:textColor="@color/black"
                />

            <RelativeLayout
                android:id="@+id/dialog_pk_invited_ll"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/dialog_pk_invited_jieshou"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="接受"
                    android:background="@drawable/button_shape_circle_2"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/dialog_pk_invited_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PK邀请"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorAccent"
                    />
                <Button
                    android:id="@+id/dialog_pk_invited_jujue"
                    android:layout_alignParentRight="true"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="拒绝"
                    android:background="@drawable/button_shape_circle_2"/>
            </RelativeLayout>


        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/colorAccent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="奖惩"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                />

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/colorAccent"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text="挑战胜利可奖励4成长值"
            android:textSize="14sp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:drawablePadding="5dp"
            android:lineSpacingExtra="5dp"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:text="挑战失败会被扣掉4成长值"
                android:textSize="14sp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:lineSpacingExtra="5dp"
                />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/colorAccent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="注意"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:drawablePadding="10dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/colorAccent"/>

            </LinearLayout>


            <TextView
                android:id="@+id/dialog_pk_invited_zhuyi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="注：该挑战将于1月26日9：56分失效，如接收挑战，则立即进入PK状态，2月1日8：00可出PK结果。"
                android:textSize="14dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:lineSpacingExtra="3dp"
                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</LinearLayout>