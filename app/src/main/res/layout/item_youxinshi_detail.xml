<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="45dp">
        <TextView
            android:layout_weight="1"
            android:id="@+id/item_youxinshi_detail_name"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="昵称"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <LinearLayout
            android:id="@+id/del_toggle_ll"
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:background="@drawable/button_gray_a"
            android:gravity="center"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:textSize="14sp" >

            <TextView
                android:id="@+id/item_youxinshi_detail_del"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="删除"
                android:textColor="@color/red"
                android:textSize="14sp" />
            <TextView
                android:layout_width="0.5dp"
                android:layout_marginTop="3dp"
                android:background="@color/gray_text_color"
                android:layout_marginBottom="3dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/item_youxinshi_detail_del_cancle"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="取消"
                android:textColor="@color/gray_text_color"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/item_youxinshi_detail_context"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:text="心之所愿无所不成"
        android:textColor="@color/black"
        android:textSize="18sp" />

</LinearLayout>