<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:id="@+id/home_title_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <RelativeLayout
            android:id="@+id/activity_pk_record_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/backblack" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="PK记录"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg_color"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <TextView
            android:id="@+id/activity_pk_record_type_select"
            android:text="全部PK "
            android:drawableRight="@mipmap/blackdown"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </TextView>


        <TextView
            android:layout_toRightOf="@+id/activity_pk_record_type_select"
            android:id="@+id/pk_record_acount"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="25"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@+id/pk_record_acount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:text="次"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:gravity="center"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pk_record_acount_jieshou"
                android:layout_width="65dp"
                android:layout_height="18dp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:text="18次"
                android:textSize="12sp"
                android:background="@drawable/button_shape_half_white_gray_2"
                android:gravity="center"
                />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:text="接受"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

            <CheckBox
                android:id="@+id/pk_record_status_cb_1"
                android:background="@drawable/selector_pk_bg"
                android:button="@null"
                android:layout_margin="5dp"
                android:layout_width="20dp"
                android:checked="true"
                android:layout_height="20dp"
                />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_gravity="center_vertical"
            android:layout_height="25dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pk_record_acount_jujue"
                android:layout_width="65dp"
                android:layout_height="18dp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:text="8次"
                android:textSize="12sp"
                android:background="@drawable/button_shape_half_white_gray_2"
                android:gravity="center"
                />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:text="拒绝"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
            <CheckBox
                android:id="@+id/pk_record_status_cb_2"
                android:layout_margin="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_pk_bg"
                android:button="@null"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_gravity="center_vertical"
            android:layout_height="25dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pk_record_acount_shibai"
                android:layout_width="65dp"
                android:layout_height="18dp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:text="1次"
                android:textSize="12sp"
                android:background="@drawable/button_shape_half_white_gray_2"
                android:gravity="center"
                />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:text="失效"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
            <CheckBox
                android:id="@+id/pk_record_status_cb_3"
                android:layout_margin="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_pk_bg"
                android:button="@null"/>

        </LinearLayout>


    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/silver"/>

        <LinearLayout
            android:id="@+id/pk_record_sheng_ll"
            android:background="@color/black_on"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pk_record_acount_sheng"
                    android:layout_width="65dp"
                    android:layout_height="18dp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:text="18次"
                    android:textSize="12sp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:text="【胜】"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"/>

                <CheckBox
                    android:id="@+id/pk_record_result_cb_1"
                    android:layout_margin="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/selector_pk_bg"
                    android:button="@null"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_gravity="center_vertical"
                android:layout_height="25dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pk_record_acount_ping"
                    android:layout_width="65dp"
                    android:layout_height="18dp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:text="8次"
                    android:textSize="12sp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:text="【平】"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"/>
                <CheckBox
                    android:id="@+id/pk_record_result_cb_2"
                    android:layout_margin="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/selector_pk_bg"
                    android:button="@null"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_gravity="center_vertical"
                android:layout_height="25dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pk_record_acount_bai"
                    android:layout_width="65dp"
                    android:layout_height="18dp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:text="1次"
                    android:textSize="12sp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:text="【败】"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"/>

                <CheckBox
                    android:id="@+id/pk_record_result_cb_3"
                    android:layout_margin="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/selector_pk_bg"
                    android:button="@null"/>

            </LinearLayout>

        </LinearLayout>
        <com.theworldofluster.example.ziang.tremblenumber.view.NoScrollListView
            android:id="@+id/activity_pk_record_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.theworldofluster.example.ziang.tremblenumber.view.NoScrollListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/silver"/>
    </LinearLayout>

    </ScrollView>
</LinearLayout>
