<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/button_shape_half_white_cricle_10"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/main_icon_xinli"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/dialog_cancle"
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/dialog_cancle"/>

        <TextView
            android:id="@+id/remind_title"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="心理分析"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/blue_text"
            />
    </RelativeLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_alert_health_godetail"
                android:textColor="@color/darkorange"
                android:layout_width="wrap_content"
                android:textSize="40sp"
                android:layout_height="wrap_content"
                android:text="400"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="  分"/>

        </LinearLayout>

            <LinearLayout
                android:padding="20dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:text="3月心情"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:drawablePadding="10dp"
                    android:lineSpacingExtra="5dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:text="关键词"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:drawablePadding="10dp"
                    android:lineSpacingExtra="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:text="充实"
                    android:background="@drawable/button_shape_cricle_blue"
                    android:textSize="14sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="5dp"
                    />
            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="持续进行情绪打卡，有助于全面分析你的心理健康状况哦！......"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:drawablePadding="10dp"
            android:lineSpacingExtra="5dp"
            />

</LinearLayout>

</LinearLayout>