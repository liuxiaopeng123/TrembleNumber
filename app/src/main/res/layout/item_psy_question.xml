<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/button_shape_half_2"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/item_psy_question_name"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="测一测职场中你的应变能力/40题"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <RadioGroup
            android:id="@+id/item_psy_question_rg"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RadioButton
                android:textColor="@color/black"
                android:id="@+id/item_psy_question_rb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A"/>
            <RadioButton
                android:textColor="@color/black"
                android:id="@+id/item_psy_question_rb2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B"/>
