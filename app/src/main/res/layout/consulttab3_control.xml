<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:background="@color/gray_bg_color"
            android:paddingRight="30dp"
            android:layout_height="45dp">
                <TextView
                    android:id="@+id/consult_type_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_shape_half_white_blue_2"
                    android:text="心理类资讯"/>
                <TextView
                    android:id="@+id/consult_type_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_shape_half_white_cricle"
                    android:text="生理类资讯"/>
        </LinearLayout>
        <ListView
            android:divider="@null"
            android:id="@+id/consulttab3_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
</LinearLayout>