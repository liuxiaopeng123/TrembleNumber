<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/psy_tab4_item3"
                    android:layout_width="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/yuanbeijingweixuanzhong"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:text="家庭"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/psy_tab4_item5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="50dp"
                    android:gravity="center"
                    android:background="@mipmap/yuanbeijingweixuanzhong"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:text="亲密"
                     />

                <TextView
                    android:visibility="gone"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/psy_tab4_item1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView"
                    android:layout_alignTop="@+id/imageView"
                    android:background="@mipmap/yuanbeijingweixuanzhong"
                    android:gravity="center"
                    android:text="情绪"
                    android:textColor="@color/white" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/psy_tab4_item7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/psy_tab4_item1"
                    android:layout_alignLeft="@+id/psy_tab4_item4"
                    android:layout_alignStart="@+id/psy_tab4_item4"
                    android:layout_marginBottom="16dp"
                    android:background="@mipmap/yuanbeijingweixuanzhong"
                    android:gravity="center"
                    android:text="成长"
                    android:textColor="@color/white" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/psy_tab4_item6"
                    android:layout_width="50dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="60dp"
                    android:background="@mipmap/yuanbeijingweixuanzhong"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:text="婚姻"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/psy_tab4_item2"
                    android:layout_width="50dp"
                    android:gravity="center"
                    android:layout_marginTop="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    android:background="@mipmap/yuanbeijingweixuanzhong"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:text="性格"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/psy_tab4_item4"
                    android:layout_width="50dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="70dp"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/yuanbeijingweixuanzhong"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:text="人际"/>

                <ImageView
                    android:layout_width="80dp"
                    android:background="@mipmap/ren"
                    android:layout_height="170dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/imageView" />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_weight="3">

                <GridView
                    android:id="@+id/psytab1_gv2"
                    android:layout_width="match_parent"
                    android:numColumns="3"
                    android:horizontalSpacing="5dp"
                    android:verticalSpacing="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </GridView>

        </LinearLayout>

</LinearLayout>