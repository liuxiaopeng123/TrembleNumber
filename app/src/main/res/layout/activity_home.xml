<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/home_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/home_rl_guahua"
                android:layout_width="55dp"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="50dp"
                android:layout_height="130dp">
                <pl.droidsonroids.gif.GifImageView
                    android:visibility="gone"
                    android:id="@+id/home_activity_guahua"
                    android:layout_width="55dp"
                    android:src="@drawable/guahua_baitian"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_rl_wenjianjia"
                android:layout_width="80dp"
                android:layout_marginTop="290dp"
                android:layout_marginLeft="70dp"
                android:layout_height="100dp">

                <pl.droidsonroids.gif.GifImageView
                    android:visibility="gone"
                    android:id="@+id/home_activity_wenjianjia"
                    android:layout_width="80dp"
                    android:src="@drawable/jiaxue"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/home_rl_diannao"
                android:layout_width="150dp"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="120dp"
                android:layout_height="100dp">

                <pl.droidsonroids.gif.GifImageView
                    android:visibility="gone"
                    android:id="@+id/home_activity_diannao"
                    android:layout_width="150dp"
                    android:src="@drawable/diannao"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/home_rl_mofaqiu"
                android:layout_width="40dp"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="180dp"
                android:layout_height="40dp">

                <pl.droidsonroids.gif.GifImageView
                    android:visibility="gone"
                    android:id="@+id/home_activity_mofaqiu"
                    android:layout_width="40dp"
                    android:src="@drawable/mofaqiu"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/home_rl_taili"
                android:layout_width="wrap_content"
                android:layout_marginTop="323dp"
                android:layout_marginLeft="223dp"
                android:layout_height="wrap_content">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/home_activity_taili"
                    android:layout_width="wrap_content"
                    android:src="@drawable/taili_baitian"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_rl_feibiao"
                android:layout_width="100dp"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="265dp"
                android:layout_height="100dp">

                <pl.droidsonroids.gif.GifImageView
                    android:visibility="gone"
                    android:id="@+id/home_activity_feibiao"
                    android:layout_width="90dp"
                    android:src="@drawable/feibiao"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>


            <pl.droidsonroids.gif.GifImageView
                android:layout_height="wrap_content"
                android:id="@+id/home_activity_zuozhe"
                android:layout_width="wrap_content"
                android:layout_marginTop="175dp"
                android:src="@drawable/zuozhe"
                android:layout_marginLeft="100dp"
                />
            <ImageView
                android:id="@+id/home_activity_yizi"
                android:layout_width="650dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/yizi_baitian"
                android:layout_height="550dp"
                />

            <pl.droidsonroids.gif.GifImageView
                android:layout_height="wrap_content"
                android:id="@+id/home_activity_zhanzhe"
                android:layout_width="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/zhanli"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="200dp"
                />

            <ImageView
                android:layout_alignParentBottom="true"
                android:id="@+id/home_activity_paobuji"
                android:layout_width="668dp"
                android:layout_height="451dp"
                android:src="@drawable/paobuji_baitian"
                />
            <pl.droidsonroids.gif.GifImageView
                android:layout_height="wrap_content"
                android:id="@+id/home_activity_pao"
                android:layout_width="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="-30dp"
                android:src="@drawable/paobu"
                android:layout_marginLeft="30dp"
                />

            <pl.droidsonroids.gif.GifImageView
                android:layout_height="wrap_content"
                android:id="@+id/home_activity_shuijiao"
                android:layout_width="wrap_content"
                android:layout_marginTop="290dp"
                android:src="@drawable/shuijiao"
                android:layout_marginLeft="365dp"
                />

        </RelativeLayout>

    </HorizontalScrollView>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:id="@+id/home_activity_my"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/home_icon_my"
        />

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:id="@+id/home_activity_my_health"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/home_icon_my_health"
        />


</RelativeLayout>