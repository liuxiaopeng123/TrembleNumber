<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/home_activity_bg"
            android:background="@drawable/home_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <pl.droidsonroids.gif.GifImageView
                android:visibility="invisible"
                android:id="@+id/home_activity_guahua"
                android:layout_width="wrap_content"
                android:src="@drawable/guahua_baitian"
                android:layout_height="wrap_content"
                />
            <RelativeLayout
                android:id="@+id/home_rl_guahua"
                android:layout_width="55dp"
                android:layout_height="130dp">

            </RelativeLayout>


            <pl.droidsonroids.gif.GifImageView
                android:visibility="invisible"
                android:id="@+id/home_activity_wenjianjia"
                android:layout_width="80dp"
                android:src="@drawable/jiaxue"
                android:layout_height="wrap_content"
                />
            <RelativeLayout
                android:id="@+id/home_rl_wenjianjia"
                android:layout_width="80dp"
                android:layout_height="100dp">

            </RelativeLayout>

            <pl.droidsonroids.gif.GifImageView
                android:visibility="invisible"
                android:id="@+id/home_activity_diannao"
                android:layout_width="match_parent"
                android:foregroundGravity="center"
                android:src="@drawable/diannao"
                android:layout_height="match_parent"
                />
            <RelativeLayout
                android:id="@+id/home_rl_diannao"
                android:layout_width="150dp"
                android:layout_height="100dp">

            </RelativeLayout>

            <pl.droidsonroids.gif.GifImageView
                android:visibility="invisible"
                android:id="@+id/home_activity_mofaqiu"
                android:layout_width="40dp"
                android:foregroundGravity="center"
                android:src="@drawable/mofaqiu"
                android:layout_height="wrap_content"
                />
            <RelativeLayout
                android:id="@+id/home_rl_mofaqiu"
                android:layout_width="40dp"
                android:layout_height="40dp">


            </RelativeLayout>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/home_activity_taili"
                android:layout_width="wrap_content"
                android:src="@drawable/taili_baitian"
                android:layout_height="wrap_content"
                />
            <RelativeLayout
                android:id="@+id/home_rl_taili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </RelativeLayout>

            <pl.droidsonroids.gif.GifImageView
                android:visibility="invisible"
                android:id="@+id/home_activity_feibiao"
                android:layout_width="match_parent"
                android:src="@drawable/feibiao"
                android:layout_height="match_parent"
                />
            <RelativeLayout
                android:id="@+id/home_rl_feibiao"
                android:layout_width="100dp"
                android:layout_height="100dp">

            </RelativeLayout>


            <pl.droidsonroids.gif.GifImageView
                android:layout_height="560dp"
                android:id="@+id/home_activity_zuozhe"
                android:layout_width="280dp"
                android:src="@drawable/zuozhe"
                />

            <ImageView
                android:id="@+id/home_activity_yizi"
                android:layout_width="match_parent"
                android:background="@drawable/yizi_baitian"
                android:layout_height="match_parent"
                />

            <pl.droidsonroids.gif.GifImageView
                android:layout_height="wrap_content"
                android:id="@+id/home_activity_zhanzhe"
                android:layout_width="wrap_content"
                android:src="@drawable/zhanli"
                />

            <ImageView
                android:layout_alignParentBottom="true"
                android:id="@+id/home_activity_paobuji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/paobuji_baitian"
                />
            <pl.droidsonroids.gif.GifImageView
                android:layout_height="wrap_content"
                android:id="@+id/home_activity_pao"
                android:layout_width="wrap_content"
                android:src="@drawable/paobu"
                />

            <pl.droidsonroids.gif.GifImageView
                android:layout_height="wrap_content"
                android:id="@+id/home_activity_shuijiao"
                android:layout_width="wrap_content"
                android:src="@drawable/shuijiao"
                />

        </RelativeLayout>



    </HorizontalScrollView>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:id="@+id/home_activity_my"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/home_icon_my"
        />

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:id="@+id/home_activity_my_health"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/home_icon_my_health"
        />



    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/home_glass"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:background="#99000000"
        android:layout_height="match_parent">

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_home_yindao_stork"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="60dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_home_yindao_stork"
            />

        <TextView
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:layout_width="240dp"
            android:textSize="16sp"
            android:text="在这里，你可以查看到我为你定制的“健康叮嘱”、“健康周报和改善策略”资讯。同时，你还可以记录自己每天的心情，进行各类心理测试。"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>


        <TextView
            android:id="@+id/home_activity_yindao_zhidaole"
            android:layout_centerInParent="true"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="知道了"
            android:layout_height="40dp"
            android:background="@drawable/shape_home_yindao_stork"
            />


    </RelativeLayout>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/home_activity_duihua_rl"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:layout_width="320dp"
        android:layout_height="130dp">

        <TextView
            android:id="@+id/home_activity_duihua_text"
            android:background="@drawable/button_shape_half_white_cricle_home"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:text="早上好，我是MR.卧龙，是你在“抖擞”世界里最忠诚的伙伴！我将及时关注你的心理和身体的健康，并为你定制专属的健康提醒和改善策略，只要你能根据我的建议积极修正日常行为及情绪，即可实现身心健康与平衡。以后你遇到任何困惑，都请与我分享，我将帮你分担、助你解决。"
            android:textColor="@color/black"
            android:maxLength="130"
            android:layout_alignParentBottom="true"
            android:paddingLeft="65dp"
            android:layout_height="120dp" />


        <com.theworldofluster.example.ziang.tremblenumber.view.CircularImage
            android:id="@+id/home_activity_duihua_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/liechixiao"
            android:layout_marginRight="30dp"
            />

        <TextView
            android:layout_marginLeft="100dp"
            android:padding="2dp"
            android:id="@+id/home_yindao_sanyue"
            android:layout_width="wrap_content"
            android:text="MR.卧龙"
            android:background="@color/colorPrimary"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/home_yindao_tv"
            android:layout_width="wrap_content"
            android:text="去设置你的昵称"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"/>
    </RelativeLayout>


</RelativeLayout>