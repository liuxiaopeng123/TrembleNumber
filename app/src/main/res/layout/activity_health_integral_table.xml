<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/home_title_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <RelativeLayout
            android:id="@+id/health_integral_table_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/backblack" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="健康分龙虎榜"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:id="@+id/pk_rules"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/wen" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_below="@+id/home_title_rl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg_color"/>

    <ScrollView
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <TextView
            android:id="@+id/activity_pk_record_type_select"
            android:text="全网排名 "
            android:drawableRight="@mipmap/blackdown"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </TextView>


        <TextView
            android:id="@+id/pk_record"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="PK记录"
            android:textSize="16sp"
            android:background="@drawable/button_shape_half_white_blue_2"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:background="@color/darkslategray"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="140dp">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <com.theworldofluster.example.ziang.tremblenumber.view.CircularImage
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/expert_b"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_marginTop="80dp"
                android:layout_width="65dp"
                android:layout_height="18dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="No.2"
                android:textSize="12sp"
                android:background="@drawable/button_shape_half_white_blue_2"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="梦白|930分"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <com.theworldofluster.example.ziang.tremblenumber.view.CircularImage
                android:layout_centerHorizontal="true"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/expert_b"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_marginTop="80dp"
                android:layout_width="65dp"
                android:layout_height="18dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="No.1"
                android:textSize="12sp"
                android:background="@drawable/button_shape_half_white_red_2"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="梦白|930分"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <com.theworldofluster.example.ziang.tremblenumber.view.CircularImage
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/expert_b"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_marginTop="80dp"
                android:layout_width="65dp"
                android:layout_height="18dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="No.1"
                android:textSize="12sp"
                android:background="@drawable/button_shape_half_white_orange_2"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="梦白|930分"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="90dp">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:text="50"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorPrimaryGreen"
            android:layout_height="match_parent" />


        <com.theworldofluster.example.ziang.tremblenumber.view.CircularImage
            android:layout_centerHorizontal="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/expert_b"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:text="昵称"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorPrimaryGreen"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:text="打败了深圳90%用户"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/gray"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:text="599↑"
            android:textSize="20sp"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorPrimaryGreen"
            android:layout_height="match_parent" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/gray_bg_color"/>
        <com.theworldofluster.example.ziang.tremblenumber.view.NoScrollListView
            android:id="@+id/activity_health_lv"
            android:layout_marginBottom="45dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.theworldofluster.example.ziang.tremblenumber.view.NoScrollListView>
    </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/health_integral_table_pk_tab"
        android:layout_width="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:ems="1"
        android:textColor="@color/white"
        android:background="@color/lightsalmon"
        android:gravity="center"
        android:text="比我好"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/health_integral_table_invite_pk"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:text="我要PK"
        android:textSize="18sp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
