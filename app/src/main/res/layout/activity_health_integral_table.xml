<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:id="@+id/home_title_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <RelativeLayout
            android:id="@+id/health_integral_table_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/backblack" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="健康分龙虎榜"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:id="@+id/pk_rules"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/backblack" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <android.support.v7.widget.AppCompatSpinner
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:entries="@array/city"
            android:layout_height="match_parent">
        </android.support.v7.widget.AppCompatSpinner>


        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:text="PK记录"
            android:textSize="16sp"
            android:background="@drawable/button_shape_half_white_blue_2"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:background="@color/darkslategray"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="140dp">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <com.theworldofluster.example.ziang.tremblenumber.view.CircularImage
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/expert_b"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_marginTop="80dp"
                android:layout_width="65dp"
                android:layout_height="18dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="No.2"
                android:textSize="12sp"
                android:background="@drawable/button_shape_half_white_blue_2"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="梦白|930分"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <com.theworldofluster.example.ziang.tremblenumber.view.CircularImage
                android:layout_centerHorizontal="true"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/expert_b"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_marginTop="80dp"
                android:layout_width="65dp"
                android:layout_height="18dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="No.1"
                android:textSize="12sp"
                android:background="@drawable/button_shape_half_white_red_2"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="梦白|930分"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <com.theworldofluster.example.ziang.tremblenumber.view.CircularImage
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/expert_b"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_marginTop="80dp"
                android:layout_width="65dp"
                android:layout_height="18dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="No.1"
                android:textSize="12sp"
                android:background="@drawable/button_shape_half_white_orange_2"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="梦白|930分"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="100dp">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:text="50"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorPrimaryGreen"
            android:layout_height="match_parent" />


        <com.theworldofluster.example.ziang.tremblenumber.view.CircularImage
            android:layout_centerHorizontal="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/expert_b"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:text="昵称"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorPrimaryGreen"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:text="打败了深圳90%用户"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/gray"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:text="599↑"
            android:textSize="20sp"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorPrimaryGreen"
            android:layout_height="match_parent" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/gray_bg_color"/>



</LinearLayout>
