<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_text_color"
    >


    <RelativeLayout
        android:id="@+id/home_title_rl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/whitesmoke"
        >

        <RelativeLayout
            android:id="@+id/information_back"
            android:layout_width="60dp"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/backblack" />

        </RelativeLayout>

        <!-- 顶部导航栏 -->
        <LinearLayout
            android:id="@+id/lostand_found_tab_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lostand_found_tab_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lostand_found_tab_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="心理提醒"
                android:textColor="@color/gray_text_color"
                android:layout_marginRight="20dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lostand_found_tab_03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/gray_text_color"
                android:text="身体提醒"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lostand_found_tab_04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/gray_text_color"
                android:text="其他"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>



    <!-- Tab底部下划线 -->
    <!--<ImageView-->
    <!--android:id="@+id/lostand_tab_bottom_img"-->
    <!--android:layout_width="100dp"-->
    <!--android:layout_height="2dp"-->
    <!--android:scaleType="matrix"-->
    <!--android:layout_marginLeft="60dp"-->
    <!--android:src="@mipmap/tab_tag_selected"/>-->




    <ImageView
        android:id="@+id/activity_my_about_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="1dp"
        android:background="@mipmap/jiade_e"
        android:scaleType="fitXY"
        />

</LinearLayout>
