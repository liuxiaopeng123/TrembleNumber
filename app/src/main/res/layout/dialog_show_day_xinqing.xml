<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/text_line_bg_orange"
    android:paddingBottom="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/dialog_show_day"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="17"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/dialog_show_year_mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="2018/03"
                />

        </LinearLayout>

        <ImageView
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/cancle"
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/dialog_cancle"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_shape_half_white_cricle_10"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/dialog_show_biaoqing1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/huibiaoqing"
                />
            <TextView
                android:id="@+id/dialog_show_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/dialog_show_text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="3"
                android:textSize="14sp"
                android:layout_weight="1"
                android:background="#11000000"
                android:hint="您没有发表心情~"
                android:padding="5dp"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_shape_half_white_cricle_10"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/dialog_show_biaoqing2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/huibiaoqing"
                />
            <TextView
                android:id="@+id/dialog_show_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:00"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/dialog_show_text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="3"
                android:textSize="14sp"
                android:layout_weight="1"
                android:background="#11000000"
                android:hint="您没有发表心情~"
                android:padding="5dp"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_shape_half_white_cricle_10"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/dialog_show_biaoqing3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/huibiaoqing"
                />
            <TextView
                android:id="@+id/dialog_show_date3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:00"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/dialog_show_text3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="3"
                android:textSize="14sp"
                android:layout_weight="1"
                android:background="#11000000"
                android:hint="您没有发表心情~"
                android:padding="5dp"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
