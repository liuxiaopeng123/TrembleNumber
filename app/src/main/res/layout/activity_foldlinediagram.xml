<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/activity_personal_01"
    tools:context=".activity.FoldlinediagramActivity">

    <RelativeLayout
        android:id="@+id/home_title_rl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >

        <RelativeLayout
            android:id="@+id/information_back"
            android:layout_width="60dp"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/backwhite" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="2018.03"
            android:textSize="15sp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:drawablePadding="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:drawableRight="@mipmap/up_white"
            />

    </RelativeLayout>


    <com.theworldofluster.example.ziang.tremblenumber.view.ChartView
        android:layout_margin="10dp"
        android:id="@+id/chartview_graph"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:bgcolor="#00ffffff"
        app:interval="25sp"
        app:isScroll="false"
        app:linecolor="#e2e2e2"
        app:xylinecolor="#e2e2e2"
        app:xylinewidth="1dp"
        app:xytextcolor="#ffffff"
        app:xytextsize="12sp" />

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_shape_half_white_cricle_10"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/main_icon_baogao"/>
            <TextView
                android:id="@+id/remind_title"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:text="健康报告"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/blue_text"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/remind_title_right"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="查看详情 >"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/blue_text"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activity_graph_jiankangfen"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:textSize="30sp"
                    android:layout_height="wrap_content"
                    android:text="400"/>
                <TextView
                    android:textColor="@color/gray_text_color"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:text="健康分"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activity_graph_quanwangpingjunfen"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:textSize="30sp"
                    android:layout_height="wrap_content"
                    android:text="400"/>
                <TextView
                    android:textColor="@color/gray_text_color"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:text="全网每周平均分"/>

            </LinearLayout>
        </LinearLayout>





    </LinearLayout>

    <!--<com.github.mikephil.charting.charts.LineChart-->
        <!--android:id="@+id/lineChart"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="300dp"-->
         <!--/>-->
</LinearLayout>