<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/button_shape_half_white_cricle_10"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/dialog_psy_tab4_cancle"
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/dialog_cancle"/>

        <TextView
            android:id="@+id/dialog_psy_tab4_title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="领袖型气质"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            />


    </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="360dp">

            <LinearLayout
                android:id="@+id/dialog_psy_bg_ll"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="360dp">
                <TextView
                    android:id="@+id/dialog_psy_tab4_content"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text="内容"
                    android:textColor="@color/white"
                    android:drawablePadding="10dp"
                    android:lineSpacingExtra="5dp"
                    />

            </LinearLayout>

        </ScrollView>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/button_shape_half_2"/>

</LinearLayout>

</LinearLayout>