<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/white_bg"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="20dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/dialog_cancle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PK火热进行中"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorAccent"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="380dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:background="@drawable/qizi_left"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"/>
                <com.theworldofluster.example.ziang.tremblenumber.view.CircularImage
                    android:layout_gravity="center"
                    android:id="@+id/dialog_pk_result_userimg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/expert_b"
                    android:scaleType="centerCrop"
                    />

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:background="@drawable/qizi_right"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:gravity="center"
                android:singleLine="false"
                android:text="点击头像偷瞄对方健康状态"
                android:textSize="14sp"
                android:padding="3dp"
                android:textColor="@color/blue_text"
                />
            <TextView
                android:id="@+id/dialog_pk_result_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:gravity="center"
                android:singleLine="false"
                android:text="2月1日8:00可查看PK结果"
                android:textSize="13sp"
                android:padding="2dp"
                android:textColor="@color/gray_text_color"
                />

            <TextView
                android:id="@+id/dialog_pk_result_pkzhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:gravity="center"
                android:singleLine="false"
                android:text="正在与用户XXXPK中"
                android:textSize="17sp"
                android:padding="5dp"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:background="@drawable/qizi_left"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:background="@drawable/qizi_right"
                    android:layout_weight="1"/>
            </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/colorAccent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="奖惩"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                />

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/colorAccent"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text="挑战胜利可奖励成长值"
            android:textSize="14sp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:drawablePadding="5dp"
            android:lineSpacingExtra="5dp"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:text="挑战失败会被扣掉成长值"
                android:textSize="14sp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:lineSpacingExtra="5dp"
                />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/colorAccent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="获胜攻略"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:drawablePadding="10dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/colorAccent"/>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="每日坚持记录心情"
                android:textSize="14dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:lineSpacingExtra="3dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="按照好友的改善策略进行对应改善"
                android:textSize="14dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:lineSpacingExtra="3dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="坚持锻炼,解除不良生活习惯,合理饮食"
                android:textSize="14dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:lineSpacingExtra="3dp"
                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</LinearLayout>